#!/usr/bin/env bash
case "$1" in
  "up")
    docker compose up --build "${@:2}"
    ;;
  "down")
    docker compose down
    ;;
  "cli")
    docker compose run --rm devcontainer bash
    ;;
  *)
    echo "proj"
    echo "  up   run the project"
    echo "  cli  run a command in the cli"  
    ;;
esac